 
int main()
{
	int i = 69;
	int number = 72;
	number = i + number;
	int arr[3] { };       	//заполняется нулями автоматически
	int * iPointer = &i;
	number =  *iPointer;   	
	*iPointer = 15;             // 15 вписывается в И
	iPointer = &arr[0];     	//ссылка на первый эл массива
	arr[0] = 5;                	//напрямую вписываем значение в элемент массива
	iPointer = iPointer + 2;          	//кидает на след элемент
	*iPointer = 6;
 
return 0;
}
